{# This is the home page that will display the book details #}

{% extends 'product/book_layout.html.twig' %}

{% block title %}Livre - {{ parent() }} {{ book.id }}{% endblock %}

{% block body %}
   <div class="img-background2"></div>

   <section class="detail-image">
        <p class="book-detail-title">{{ book.title }}</p>
        <img class="box-image" src="{{ book.picture }}" alt="fairy-picture">
        <div class="box-text">
            <p class="details">Auteur : {{ book.author }}</p>
            <p class="details">Genre : {{ book.genre }}</p>
            <p class="details">Description : {{ book.description }}</p>
            <p class="details">Commentaire : {{ book.comment }}</p>
        </div>
   </section>
   
{% endblock %}
